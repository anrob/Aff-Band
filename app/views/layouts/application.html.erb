<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "Untitled" %></title>
    <%= stylesheet_link_tag "reset", "text", "960", "application" %>
    <%= javascript_include_tag :defaults, 'jquery.min' %>  
    <script type="text/javascript" src="http://use.typekit.com/iyf6odv.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>     
      <div id="navbar">
          <div class="container_12">
          <ul>
          <li><%= link_to 'Home', root_url %></li> 
          <li><%= link_to 'Home' %></li>
          <li><%= link_to 'Home' %></li>
          <li><%= link_to 'Contact Us' %></li>
          </ul>
          </div>
           </div>
    <div class="container_12 wrapper">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>    
      
      <div class="grid_12 header">
          <%= yield(:profile) %>   
      </div> 
      
      <div class="grid_12 mainbody">
      <!--  Extra Collection info , :collection => @profiles       -->
      <%= yield %> 
      </div>
               <div class="clear"><!-- clear--> </div>
    </div> 
    
  </body>
</html>
